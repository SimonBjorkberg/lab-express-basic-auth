
<div>
    <h2>Signup</h2>
    <form action="/signup" method="post">
    <label>
        <input type="text" name="username" placeholder="Username" required>
    </label>
    <label>
        <input type="password" name="password" placeholder="********" required>
    </label>
    <button type="submit">Create Account</button>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
    </form>
</div>